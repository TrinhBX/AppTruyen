<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apptruyen">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="preferExternal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".HomePageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".truyentranh.ChapActivity" />
        <activity android:name=".truyentranh.DocTruyenActivity" />
        <activity android:name=".truyentranh.Main2Activity"></activity>
        <activity android:name=".truyenchu.SearchStoryActivity" />
        <activity android:name=".truyenchu.CategoriesActivity" />
        <activity android:name=".truyenchu.ChapterListActivity" />
        <activity android:name=".truyenchu.ChapterContentActivity" />
        <activity android:name=".truyenchu.StoryDetailActivity" />
        <activity android:name=".truyenchu.CategoryActivity" />
        <activity android:name=".truyenchu.MainActivity">
        </activity>
    </application>

</manifest>